<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="{{ entry is defined ? entry.intro|doxter(rules)|striptags : 'Craft Training for Busy Developers' }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <link rel="stylesheet" href="/dist/vendor.css">
    <link rel="stylesheet" href="/dist/app.css">

    {% include '_special/metadata' %}

</head>

<body id="{{ id }}">
    <div id="app">
        {% include '_includes/nav' %}
        {% if content is defined %}
            {{ content }}
        {% endif %}

        <footer class="segment">
            <div class="grid">
                <div class="row">
                    <div class="full column">
                        <p>&copy;{{ "now"|date("Y") }} {{ siteName }}, All Content Copyrighted.</p>
                        <nav>
                            <ul>
                                <li>
                                    <a href="/terms">Terms</a>
                                </li>
                                <li>
                                    <a href="/privacy">Privacy</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="/dist/vendor.js"></script>
    <script src="/dist/app.js"></script>
</body>
</html>
