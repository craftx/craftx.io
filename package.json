{
  "name": "craftx.io",
  "version": "1.0.0",
  "description": "Craft Training for Busy Developers",
  "main": "./src/app.js",
  "repository": "git@github.com:selvinortiz/craftx.io.git",
  "author": "selvin@craftx.io",
  "license": "MIT",
  "scripts": {
    "build": "webpack && gulp clean && gulp build",
    "watch": "npm-run-all --parallel webpack.watch gulp.watch",
    "gulp.watch": "gulp clean && gulp build && gulp watch",
    "webpack.watch": "webpack --watch"
  },
  "config": {
    "clean": [
      "web/dist"
    ],
    "js": {
      "watch": "./src/js/**/*.js",
      "source": {
        "app": "./src/js/app.js",
        "vendor": []
      },
      "output": {
        "dir": "web/dist",
        "app": "app.js",
        "vendor": "vendor.js"
      }
    },
    "sass": {
      "watch": {
        "app": "src/sass/*.scss",
        "vendor": [
          "src/sass/_vars.scss",
          "src/sass/_vendor/*.scss"
        ]
      },
      "source": {
        "app": "src/sass/app.scss",
        "vendor": "src/sass/vendor.scss"
      },
      "output": {
        "dir": "web/dist",
        "app": "app.css",
        "vendor": "vendor.css"
      },
      "options": {
        "app": {
          "includePaths": [
            "src/sass"
          ]
        },
        "vendor": {
          "includePaths": [
            "node_modules",
            "node_modules/bulma",
            "node_modules/sweetalert",
            "node_modules/font-awesome/scss"
          ]
        }
      }
    },
    "rev": {
      "manifest": "./web/dist/versions.json",
      "options": {
        "base": "web/dist",
        "merge": true
      }
    },
    "fonts": {
      "source": [
        "src/fonts/*",
        "node_modules/font-awesome/fonts/*",
        "node_modules/video.js/dist/fonts/*"
      ],
      "output": {
        "dir": "web/dist/fonts"
      }
    },
    "images": {
      "source": "src/images/**/*.{png,gif,jpg,jpeg,svg}",
      "output": {
        "dir": "web/dist/images"
      }
    },
    "templates": {
      "watch": "templates/**/*.{js,css,html,php}",
      "source": "templates/**/*.html",
      "output": {
        "dir": "templates"
      }
    }
  },
  "devDependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "bulma": "^0.3.1",
    "font-awesome": "^4.7.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-clean": "^0.3.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^3.1.1",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-minify": "^0.0.14",
    "gulp-rev": "^7.1.2",
    "gulp-run-sequence": "^0.3.2",
    "gulp-sass": "^3.0.0",
    "gulp-sync": "^0.1.4",
    "gulp-uglify": "^2.0.1",
    "gulp-util": "^3.0.8",
    "lodash": "^4.17.4",
    "normalize-scss": "^6.0.0",
    "npm-run-all": "^4.0.2",
    "prismjs": "^1.6.0",
    "sweetalert": "^1.1.3",
    "video.js": "^5.16.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "vue": "^2.1.10",
    "vue-loader": "^11.1.4",
    "vueify": "^9.4.0",
    "watchify": "^3.9.0",
    "webpack": "^2.2.1"
  }
}
